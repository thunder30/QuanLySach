@model IEnumerable<lab02_QuanLySach.Models.Book>

@{
    ViewBag.Title = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Book</h2>

<p>
    @Html.ActionLink("Create New", "CreateBook")
</p>
<table class="table" cellpadding="10" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_cover)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Image_cover)" alt="Alternate Text" width="200px"/>           
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBook", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBook", new { id=item.Id })            
        </td>
    </tr>
}

</table>
